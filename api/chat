import OpenAI from "openai";

const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY,
});

// ğŸ§  HAFIZA (RAM'de tutulur)
let conversation = [];

export async function POST(req) {
  try {
    const { message } = await req.json();

    // 1ï¸âƒ£ KullanÄ±cÄ± mesajÄ±nÄ± hafÄ±zaya ekle
    conversation.push({
      role: "user",
      content: message,
    });

    // 2ï¸âƒ£ OpenAI'ye gÃ¶nder
    const completion = await openai.chat.completions.create({
      model: "gpt-4o-mini",
      messages: [
        {
          role: "system",
          content: "Sen konuÅŸmalarÄ± hatÄ±rlayan yardÄ±mcÄ± bir asistansÄ±n.",
        },
        ...conversation,
      ],
    });

    const reply = completion.choices[0].message.content;

    // 3ï¸âƒ£ Bot cevabÄ±nÄ± da hafÄ±zaya ekle
    conversation.push({
      role: "assistant",
      content: reply,
    });

    // 4ï¸âƒ£ CevabÄ± dÃ¶n
    return Response.json({ reply });

  } catch (error) {
    return new Response("Hata oluÅŸtu", { status: 500 });
  }
}
